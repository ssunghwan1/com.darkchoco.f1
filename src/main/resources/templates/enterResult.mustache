{{>layout/header}}
<!-- Page Wrapper -->
{{>layout/nav}}
<!-- Begin Page Content -->
<div class="container-fluid">
    <div class="container" int ="cont">
        <div class="row">
            <div class="col input-group mb-3">
                <div>
                    <label class="input-group-text" for="inputGroupSelect01">리그명</label>
                </div>
                <select class="custom-select" id="title">
                    <option value="100퍼" selected>100퍼</option>
                    <!--                    <option value="FM2021" selected>FM2021</option>-->

<!--                    <option value="만두리그">만두리그</option>-->
                </select>
            </div>
            <div class="col input-group mb-3">
                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">경기일자</span>
                    <input class="form-control" type="text" id="date-picker1">
                </div>
            </div>

            <div class="col input-group mb-3  col">
                <div>
                    <span class="input-group-text">서킷</span>
                </div>
                <input type="text" class="form-control" placeholder="서킷명" aria-label="Username"
                       aria-describedby="basic-addon1" id="circuit">
            </div>
        </div>
        {{#result}}
            <div class="row">
                <div class="input-group mb-3 col">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">{{rank_left}}등</span>
                    </div>
                    <input type="text" class="form-control" aria-label="Default"
                           aria-describedby="inputGroup-sizing-default" id="driver_{{rank_left}}">
                    <select class="col-3 custom-select" aria-label="Default select example" id="notes_{{rank_left}}">
                        <option selected value="-">비고</option>
                        <option value="FastestLap">FastestLap</option>
                        <option value="DNF">DNF</option>
                    </select>
                    <input type="hidden" id="ranking_{{rank_left}}" value ="{{rank_left}}"/>
                </div>
                <div class="input-group mb-3 col">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-default">{{rank_right}}등</span>
                    </div>
                    <input type="text" class="form-control" aria-label="Default"
                           aria-describedby="inputGroup-sizing-default" id="driver_{{rank_right}}">
                    <select class="col-3 custom-select" aria-label="Default select example" id="notes_{{rank_right}}">
                        <option selected>비고</option>
                        <option value="FastestLap">FastestLap</option>
                        <option value="DNF">DNF</option>
                    </select>
                    <input type="hidden" id="ranking_{{rank_right}}" value ="{{rank_right}}"/>
                </div>
            </div>
        {{/result}}
<!--        <div class="text-right">-->
<!--            <button type="button" class="btn btn-primary" id="btn-save">저장</button>-->
<!--        </div>-->
        <div class="text-right">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                저장
            </button>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <span>인증번호를 입력해주세요</span>
                        <input type="text" class="form-control" placeholder="인증번호" aria-label="Username" aria-describedby="basic-addon1" id="pwd">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="btn-save">저장</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <!-- /.container-fluid -->
{{>layout/footer}}
    <script>
        var searchList =  [{{#driverList}}'{{driver}}',{{/driverList}}]

        $(function(){
            for(var i = 0 ; i<20; i++){
                $("#driver_" + i).autocomplete({
                    source: searchList,
                })
            }
        })
    </script>


    </body>

    </html>